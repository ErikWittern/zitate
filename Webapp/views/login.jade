extends layout

block content
	// show any messages that come back with authentication
	- if (message)
		div.alert message

	// Login form
	form(action="/login" method="post")
		label Email
			input(type="text" name="email")
		label Password
			input(type="password" name="password")
		button(type="submit") Login

	p Need an account?
		a(href="/signup") Signup...